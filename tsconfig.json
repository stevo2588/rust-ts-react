{
  "compilerOptions": {
    "target": "es2015",
    "allowJs": true,
    "module": "esNext",
    "skipLibCheck": true,
    "jsx": "react",
    "outDir": "./.webpack",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*",
  ]
}
